#:kivy 1.9.1
#:import os os

<StartScreen>:
    Image:
        allow_stretch: True
        keep_ratio: True
        size_hint_x: None
        size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background1

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/yellow_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        size_hint: 1.2, None
        on_press: root.manager.current = 'level'
        on_press: app.arcademode()
    Label:
        text: "Arcade"
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/green_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_press: root.manager.current = 'level'
        on_press: app.timemode()
        size_hint: 1.2, None
    Label:
        text: "Time"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/red_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: app.leave()
        size_hint: 1.2, None
    Label:
        text: "Exit"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

<LevelScreen>:
    Image:
        allow_stretch: True
        keep_ratio: True
        size_hint_x: None
        size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background1

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/green_button00.png"
        pos_hint: {'center_x': 0.3, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
        on_press: app.starteasy()
        size_hint: 1.2, None
    Label:
        text: "Easy"
        pos_hint: {'center_x': 0.3, 'center_y': 0.7}

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/yellow_button00.png"
        pos_hint: {'center_x': 0.7, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
        on_press: app.startmedium()
        size_hint: 1.2, None
    Label:
        text: "Medium"
        pos_hint: {'center_x': 0.7, 'center_y': 0.7}

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/red_button00.png"
        pos_hint: {'center_x': 0.3, 'center_y': 0.3}
        on_press: root.manager.current = 'game'
        on_press: app.starthard()
        size_hint: 1.2, None
    Label:
        text: "Hard"
        pos_hint: {'center_x': 0.3, 'center_y': 0.3}


<PauseScreen>:
    Image:
        allow_stretch: True
        keep_ratio: True
        size_hint_x: None
        size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background1

    ImgButton:
        source: app.assetpath + 'birds/BirdGreen.gif'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
    Label:
        text: "Resume"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

    ImgButton:
        source: os.getcwd() + "/assets/yellow_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'menu'
        size_hint: None, None
    Label:
        text: "Menu"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}


<ShootScreen>:
    Image:
        source: app.background
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        allow_stretch: True
        keep_ratio: True
        size_hint_y: None
        size_hint_x: None
    Image:
        source: app.background2
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        allow_stretch: True
        keep_ratio: True
        size_hint_y: None
        size_hint_x: None
        # pos_hint: {'x': 0, 'y': 0}

    Label:
        text: 'Points ' + str(app.points)
        pos_hint: {'center_x': 0.8, 'center_y': 0.8}

    Label:
        id: timerlabel
        text: 'Time ' + str(app.timer)
        pos_hint: {'center_x': 0.9, 'center_y': 0.8}

<WinScreen>:
    Image:
        allow_stretch: True
        keep_ratio: True
        size_hint_x: None
        size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background1

    Label:
        text: "You Win!"
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}

    Label:
        text: str(app.points)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}

    ImgButton:
        source: os.getcwd() + "/assets/yellow_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'menu'
        size_hint: None, None
    Label:
        text: "Menu"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
