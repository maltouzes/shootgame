# -*- coding: utf-8 -*-
#:kivy 1.9.1
#:import os os
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<StartScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.height
        source: app.background1

    ImgButton:
        source: app.ASSETPATH + 'yellow_button00'
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        # size_hint: 1.2, None
        on_press: root.manager.current = 'level'
        on_release:
            app.root.transition = SlideTransition(direction='right')
        on_press: app.arcade_mode()
    Label:
        text: "Arcade"
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}

    ImgButton:
        source: app.ASSETPATH + 'green_button00'
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_press: root.manager.current = 'level'
        on_press: app.time_mode()
        # size_hint: 1.2, None
    Label:
        text: "Time"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}

    ImgButton:
        source: app.ASSETPATH + 'red_button00'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: app.leave()
        # size_hint: 1.2, None
    Label:
        text: "Exit"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

    ImgButton:
        source: app.ASSETPATH + 'yellow_button01'
        pos_hint: {'center_x': 0.1, 'center_y': 0.1}
        on_press: root.manager.current = 'credits'

    Label:
        text: "?"
        pos_hint: {'center_x': 0.1, 'center_y': 0.1}
        bold: True
        font_size: '30sp'



<LevelScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background1

    ImgButton:
        source: app.ASSETPATH + 'green_button00'
        pos_hint: {'center_x': 0.3, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
        on_press: app.start_easy()
        # size_hint: 1.2, None
    Label:
        text: "Easy"
        pos_hint: {'center_x': 0.3, 'center_y': 0.7}

    ImgButton:
        source: app.ASSETPATH + 'yellow_button00'
        pos_hint: {'center_x': 0.7, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
        on_press: app.start_medium()
        # size_hint: 1.2, None
    Label:
        text: "Medium"
        pos_hint: {'center_x': 0.7, 'center_y': 0.7}

    ImgButton:
        source: app.ASSETPATH + 'red_button00'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'game'
        on_press: app.start_hard()
        # size_hint: 1.2, None
    Label:
        text: "Hard"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}


<PauseScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background1

    GifButton:
        id: birdgif
        source: None
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
    Label:
        text: "Resume"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

    ImgButton:
        source: app.ASSETPATH + 'yellow_button00'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'menu'
        # size_hint: None, None
        size_hint: 1.2, None
    Label:
        text: "Menu"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}


<ShootScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background2

    Label:
        id: combolabel
        text: ''
        pos_hint: {'center_x': 0.2, 'center_y': 0.9}
        font_size: '25sp'
        markup: True
        color: 0, 0, 0, 1

    Label:
        text: 'Points ' + str(app.pointsdisplay)
        pos_hint: {'center_x': 0.6, 'center_y': 0.9}
        font_size: '25sp'
        markup: True
        color: 0, 0, 0, 1

    Label:
        id: timerlabel
        text: 'Time ' + str(app.timer)
        pos_hint: {'center_x': 0.9, 'center_y': 0.9}
        font_size: '25sp'
        markup: True
        color: 0, 0, 0, 1

<WinScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background3

    # canvas.before:
        # Rectangle:
            # pos: self.pos
            # size: self.size
            # source: app.background3

    Label:
        text: str(app.points)
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        font_size: '25sp'

    Label:
        text: str(app.newrecord)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        font_size: '25sp'


    ImgButton:
        source: app.ASSETPATH + 'yellow_button00'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'menu'
        size_hint: None, None
    Label:
        text: "Menu"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

<CreditsScreen>
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.height
        source: app.background1

    ScrollView:
        Label:
            text: root.txt
            font_size: '25sp'
            halign: 'center'
            # bold: True
            markup: True
            color: 0, 0, 0, 1
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            on_ref_press:
                import webbrowser
                webbrowser.open(args[1])
