# -*- coding: utf-8 -*-
#:kivy 1.9.1
#:import os os
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<StartScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.height
        source: app.background1

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/yellow_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        # size_hint: 1.2, None
        on_press: root.manager.current = 'level'
        on_release:
            app.root.transition = SlideTransition(direction='right')
        on_press: app.arcademode()
    Label:
        text: "Arcade"
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/green_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_press: root.manager.current = 'level'
        on_press: app.timemode()
        # size_hint: 1.2, None
    Label:
        text: "Time"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/red_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: app.leave()
        # size_hint: 1.2, None
    Label:
        text: "Exit"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

<LevelScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background1

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/green_button00.png"
        pos_hint: {'center_x': 0.3, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
        on_press: app.starteasy()
        # size_hint: 1.2, None
    Label:
        text: "Easy"
        pos_hint: {'center_x': 0.3, 'center_y': 0.7}

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/yellow_button00.png"
        pos_hint: {'center_x': 0.7, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
        on_press: app.startmedium()
        # size_hint: 1.2, None
    Label:
        text: "Medium"
        pos_hint: {'center_x': 0.7, 'center_y': 0.7}

    ImgButton:
        source: os.getcwd() + "/assets/UIpack/PNG/red_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'game'
        on_press: app.starthard()
        # size_hint: 1.2, None
    Label:
        text: "Hard"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}


<PauseScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background1

    ImgButton:
        source: app.assetpath + 'birds/BirdGreen.gif'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        on_press: root.manager.current = 'game'
    Label:
        text: "Resume"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}

    ImgButton:
        source: os.getcwd() + "/assets/yellow_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'menu'
        # size_hint: None, None
        size_hint: 1.2, None
    Label:
        text: "Menu"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}


<ShootScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background2

    Label:
        id: combolabel
        text: ''
        pos_hint: {'center_x': 0.2, 'center_y': 0.9}
        font_size: '25sp'
        markup: True
        color: 0, 0, 0, 1

    Label:
        text: 'Points ' + str(app.pointsdisplay)
        pos_hint: {'center_x': 0.6, 'center_y': 0.9}
        font_size: '25sp'
        markup: True
        color: 0, 0, 0, 1

    Label:
        id: timerlabel
        text: 'Time ' + str(app.timer)
        pos_hint: {'center_x': 0.9, 'center_y': 0.9}
        font_size: '25sp'
        markup: True
        color: 0, 0, 0, 1

<WinScreen>:
    Image:
        allow_stretch: False
        keep_ratio: True
        # size_hint_x: None
        # size_hint_y: None
        width: self.parent.width
        height: self.parent.width/self.image_ratio
        source: app.background3

    # canvas.before:
        # Rectangle:
            # pos: self.pos
            # size: self.size
            # source: app.background3

    Label:
        text: str(app.points)
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        font_size: '25sp'

    Label:
        text: str(app.newrecord)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        font_size: '25sp'


    ImgButton:
        source: os.getcwd() + "/assets/yellow_button00.png"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'menu'
        size_hint: None, None
    Label:
        text: "Menu"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
